@model IEnumerable<GameMVC.Models.Game>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Games</h2>

@if (!Model.Any()){
                    <p> Não temos nenhum game ainda.</p>
}
else
{ 
        <table id = "games" class="table table-bordered table-hover">
        <thead>
        <tr>
           <th>Game</th>
        </tr>
        </thead>
        <tbody>
            @foreach(var game in Model)
            {
                <tr>
                    <td>@game.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

